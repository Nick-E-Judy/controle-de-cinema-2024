@model InserirAssentoViewModel

@{
	Layout = "_Layout";
	ViewBag.Title = "Cadastrar Assento";
}

<div class="row mt-3">
	<div class="col-lg-6">
		<form class="d-grid gap-4" asp-action="Inserir">

			<div class="mt-2">
				<label class="control-label fw-semibold">Posicao do Assento:</label>
				<input class="form-control" asp-for="Posicao"/>
				<span class="text-danger my-1" asp-validation-for="Posicao"></span>
			</div>
            
			<div class="mt-2">
				<label class="control-label fw-semibold">Assento ocupado:</label>
				<input class="form-control" asp-for="Ocupado" id="ocupado"/>
				<span class="text-danger my-1" asp-validation-for="Ocupado"></span>
			</div>

			<div class="mt-2 d-grid gap-2 d-md-block">
				<button class="btn btn-primary px-5">
					<i class="bi bi-floppy-fill me-1"></i>
					Gravar
				</button>

				<a class="btn btn-secondary px-5" href="/assento/listar">
					<i class="bi bi-arrow-return-left me-1"></i>
					Voltar
				</a>

			</div>
		</form>

	</div>
</div>