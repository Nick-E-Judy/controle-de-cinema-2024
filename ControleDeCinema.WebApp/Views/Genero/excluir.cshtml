@model ExcluirGeneroViewModel

@{
	Layout = "_Layout";
	ViewBag.Title = "Excluir Gênero";
}

<div class="row mt-3">
	<div class="col-lg-6 d-grid gap-4">

		<div class="d-grid">
			<label class="fs-5"><strong>Gênero:</strong> @Model.Nome</label>

			<label><strong>Id:</strong> [@Model.Id]</label>
			<label><strong>Descrição:</strong> @Model.Descricao</label>
		</div>

		<p class="text-bg-danger p-3 rounded">
			Deseja realmente confirmar a exclusão? Não será possível recuperar os dados excluídos posteriormente.
		</p>

		<form class="mt-2 d-grid gap-2 d-md-block" asp-action="excluir" method="post">

			<button class="btn btn-danger px-5">
				<i class="bi bi-trash-fill me-1"></i>
				Excluir
			</button>
			<a href="/genero/listar" class="btn btn-secondary px-5">
				<i class="bi bi-arrow-return-left me-1"></i>
				Voltar
			</a>
		</form>

	</div>

</div>